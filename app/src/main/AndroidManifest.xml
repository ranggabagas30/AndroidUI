<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidui">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SpansActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".customview.circularindicator.CircularActivityIndicator"></activity>
        <activity android:name=".customview.extendingviewgroup.CustomViewGroupActivity"></activity>
        <activity android:name=".customview.extendingview.CustomViewActivity" />
        <activity
            android:name=".PipActivity"
            android:resizeableActivity="true"
            android:supportsPictureInPicture="true" />
        <activity android:name=".customview.typography.TypographyActivity" />
        <activity android:name=".TabLayoutViewPagerActivity" />
        <activity android:name=".customview.tallycounter.TallyCounterActivity" />
        <activity
            android:name=".BottomNavigationActivity"
            android:theme="@style/AppMaterialTheme" />
        <activity
            android:name=".MaterialComponentsActivity"
            android:theme="@style/AppMaterialTheme" />
        <activity
            android:name=".ActivityNoActionBar"
            android:theme="@style/AppTheme.Light.NoActionBar" />
        <activity android:name=".MainActivity">
        </activity> <!-- using preloaded fonts you can avoid the delay until the font is downloaded by the first attempt -->
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>